{
  "name": "ai-reading-companion",
  "version": "1.0.0",
  "description": "An AI-powered reading assistant desktop app.",
  "main": "out/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron-vite dev -w",
    "build": "electron-vite build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.example.aireadingcompanion",
    "productName": "AI Reading Companion",
    "files": [
      "out/**",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
